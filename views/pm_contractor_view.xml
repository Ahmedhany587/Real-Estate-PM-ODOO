            <xpath expr="//button[@class='o_form_button_save']" position="replace">
                 <dev> asdasdasd </dev>
            </xpath>

        </field>
    </record> -->

    <!-- Action for Contractor Views -->
    <record id="contractor_action" model="ir.actions.act_window">
        <field name="name">Real Estate Contractor</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">kanban,tree,form</field>
    </record>

    <!-- Tree View Sequence for Contractor Action -->
    <record id="contractor_action_tree" model="ir.actions.act_window.view">
        <field name="sequence" eval="10"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="contractor_view_tree"/>
        <field name="act_window_id" ref="contractor_action"/>
    </record>

    <!-- Form View Sequence for Contractor Action -->
    <record id="contractor_action_form" model="ir.actions.act_window.view">
        <field name="sequence" eval="20"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="contractor_view_form"/>
        <field name="act_window_id" ref="contractor_action"/>
    </record>

    <!-- Kanban View Sequence for Contractor Action -->
    <record id="contractor_action_kanban" model="ir.actions.act_window.view">
        <field name="sequence" eval="30"/>
        <field name="view_mode">kanban</field>
        <field name="view_id" ref="contractor_view_kanban"/>
        <field name="act_window_id" ref="contractor_action"/>
    </record>

</odoo>
