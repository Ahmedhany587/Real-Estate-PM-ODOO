<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- Kanban View for Contractor -->
    <record id="contractor_view_kanban" model="ir.ui.view">
        <field name="name">contractor_view_kanban</field>
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
            <kanban>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <strong>
                                    <field name="name"/>
                                </strong>
                                <div>
                                    <field name="phone"/>
                                </div>
                                <div>
                                    <field name="email"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Form View for Contractor -->
    <record id="contractor_view_form" model="ir.ui.view">
        <field name="name">contractor_view_form</field>
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <!-- Header with Name and Make Bill Button -->
                    <div class="d-flex justify-content-between">
                        <group>
                            <field name="name" readonly="1"/>
                        </group>
                        <group>
                            <button name="make_bill" string="Make Bill" type="object" class="oe_highlight"/>
                        </group>
                    </div>

                    <!-- Notebook for Contractor Sub-Terms -->
                    <notebook>
                        <page string="Contractor Sub-Terms">
                            <field name="contractor_subterm_ids">
                                <tree editable="bottom" create="false">
                                    <!-- Buttons for Starting and Finishing Sub-Terms -->
                                    <button name="action_start" string="Start" type="object" class="oe_highlight"
                                            invisible='state != "assigned"'/>
                                    <button name="action_finish" string="Finish" type="object" class="oe_highlight"
                                            invisible='state != "started"'/>
                                    <!-- Fields for Sub-Term Details -->
                                    <field name="state" readonly="1"/>
                                    <field name="service_id" readonly="1"/>
                                    <field name="qty_in" readonly="state == 'finished'"/>
                                    <button name="add_qty_in" title="Add" type="object"
                                            invisible='state == "finished"' icon="fa-plus"/>
                                    <field name="qty" readonly="1"/>
                                    <field name="progress" readonly="1"/>
                                    <field name="qty_invoiced" readonly="1"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>

                </sheet>
            </form>
        </field>
    </record>

    <!-- Tree View for Contractor -->
    <record id="contractor_view_tree" model="ir.ui.view">
        <field name="name">contractor_view_tree</field>
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>

