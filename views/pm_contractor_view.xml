<?xml version="1.0" encoding="UTF-8"?>

<odoo>

    <record id="contractor_view_form" model="ir.ui.view">
        <field name="name">contractor_view_form</field>
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name" />
                    </group>
                    <group>
                        <field name="contractor_subterm_ids">
                            <tree editable="bottom" create="false">
                                <field name="state" readonly="1"/>
                                <field name="service_id" readonly="1"/>
                                <field name="qty_in" />
                                <button name="add_qty_in" title="Add" type="object" icon="fa-plus"/>
                                <field name="qty" readonly="1"/>
                                <field name="progress" readonly="1"/>
                            </tree>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="contractor_view_tree" model="ir.ui.view">
        <field name="name">contractor_view_tree</field>
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
            </tree>
        </field>
    </record>

    <record id="contractor_action_tree" model="ir.actions.act_window.view">
        <field name="sequence" eval="10"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="contractor_view_tree"/>
        <field name="act_window_id" ref="contractor_action"/>
    </record>
    <record id="contractor_action_form" model="ir.actions.act_window.view">
        <field name="sequence" eval="20"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="contractor_view_form"/>
        <field name="act_window_id" ref="contractor_action"/>
    </record>

    <record id="contractor_action" model="ir.actions.act_window">
        <field name="name">Real Estate Contractor </field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">tree,form</field>    
    </record>
</odoo>