<?xml version="1.0" encoding="UTF-8"?>

<odoo>

    <record id="contractor_view_form" model="ir.ui.view">
        <field name="name">contractor_view_form</field>
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="d-flex justify-content-between">
                        <group>
                            <field name="name" readonly="1"/>
                        </group>
                        <group>
                            <button name="make_bill" string="Make Bill"  type="object" class="oe_highlight"/>
                        </group>
                    </div>

                    <group>
                        <field name="contractor_subterm_ids">
                            <tree editable="bottom" create="false">
                                <button name="action_start" string="Start"  type="object" class="oe_highlight"
                                    invisible='state != "assigned"'/>
                                
                                <button name="action_finish" string="Finish"  type="object" class="oe_highlight"
                                    invisible='state != "started"'/>
                                
                                <field name="state" readonly="1"/>
                                <field name="service_id" readonly="1"/>
                                <field name="qty_in" readonly="state == 'finished'"/>
                                <button name="add_qty_in" title="Add" type="object" 
                                    invisible='state == "finished"' icon="fa-plus"/>
                                <field name="qty" readonly="1"/>
                                <field name="progress" readonly="1"/>
                            </tree>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="contractor_view_tree" model="ir.ui.view">
        <field name="name">contractor_view_tree</field>
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
            </tree>
        </field>
    </record>



    <record id="contractor_action" model="ir.actions.act_window">
        <field name="name">Real Estate Contractor </field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="contractor_action_tree" model="ir.actions.act_window.view">
        <field name="sequence" eval="10"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="contractor_view_tree"/>
        <field name="act_window_id" ref="contractor_action"/>
    </record>

    <record id="contractor_action_form" model="ir.actions.act_window.view">
        <field name="sequence" eval="20"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="contractor_view_form"/>
        <field name="act_window_id" ref="contractor_action"/>
    </record>

</odoo>