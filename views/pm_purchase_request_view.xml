<?xml version="1.0" encoding="UTF-8"?>

<odoo>

    <record id="view_pm_purchase_request_form" model="ir.ui.view">
        <field name="name">pm.purchase.request.form</field>
        <field name="model">pm.purchase.request</field>
        <field name="arch" type="xml">
            <form>
                <!-- Other form fields here -->
                <group>

                    <field name="name"/>
                    <field name="term_id"/>
                    <!-- <field name="product_ids" widget="many2many_tags"/> -->
                </group>
                <group>

                    <field name="purchase_request_line_ids">
                        <tree editable="bottom">
                            <field name="product_id" readonly='1'/>
                            <field name="quantity"/>
                        </tree>
                    </field>
                </group>

            </form>
        </field>
    </record>
    

    <record id="pm_purchase_request_action" model="ir.actions.act_window">
        <field name="name">Purchase Request action</field>
        <field name="res_model">pm.purchase.request</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>