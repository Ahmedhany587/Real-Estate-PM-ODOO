<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
    <record id="project_view_form" model="ir.ui.view">
        <field name="name">project_view_form</field>
        <field name="model">pm.project</field>
        <field name="arch" type="xml">
            <form string="project_form">
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                    <group>
                        <field name="contract_id"/>
                        <field name="customer"/>
                    </group>
                    <notebook>
                        <page string="Project Terms">
                            <field name="term_ids" >
                                <tree>
                                    <field name="name"/>
                                    <field name="total_cost"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="pm_project_action" model="ir.actions.act_window">
        <field name="name">Project</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">pm.project</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>