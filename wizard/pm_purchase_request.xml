<?xml version="1.0" encoding="UTF-8"?>

<odoo>

    <record id="view_pm_purchase_request_wiz_form" model="ir.ui.view">
        <field name="name">pm.purchase.request.wiz.form</field>
        <field name="model">pm.purchase.request</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name" string="Name" />
                        <field name="term_id" readonly='1'/>
                    </group>
                    <group>
                        <field name="purchase_request_line_ids" options="{'no_create': True}">
                            <tree editable="top" >
                                <field name="product_id" readonly='1'/>
                                <field name="quantity"/>
                            </tree>
                        </field>
                    </group>
                </sheet>
                <footer>
                    <button name="action_request" type="object"
                        string="Submit Request"
                        class="btn-primary" data-hotkey="q" />
                    <button string="Cancel" class="btn-secondary" special="cancel" data-hotkey="x" />
                </footer>
            </form>
        </field>
    </record>

    <record id="pm_purchase_request_wizard" model="ir.actions.act_window">
        <field name="name">PM Purchase Request</field>
        <field name="res_model">pm.purchase.request</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_pm_purchase_request_wiz_form"></field>
        <field name="target">new</field>
    </record>
</odoo>